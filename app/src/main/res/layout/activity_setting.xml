<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/max"
        android:background="@color/white"
        tools:context=".setting.SettingActivity"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <RelativeLayout
            style="@style/bar"
            android:background="@color/white"
            android:id="@+id/rl_bar">

            <ImageButton
                style="@style/barBack"
                android:id="@+id/btn_back"/>

            <TextView
                style="@style/barText"
                android:text="@string/setting_title"
                android:id="@+id/tv_bar_title"/>

        </RelativeLayout>
        
        <RelativeLayout
            style="@style/settingOption">

            <TextView
                style="@style/settingOptionTitle"
                android:text="@string/setting_option1"/>

            <Switch
                style="@style/settingOptionSwitch"
                android:id="@+id/sw_show"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/settingOption">

            <TextView
                style="@style/settingOptionTitle"
                android:text="@string/setting_option2"/>

            <Switch
                style="@style/settingOptionSwitch"
                android:id="@+id/sw_filter"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/settingOption"
            android:background="@drawable/base_btn_bg"
            android:clickable="true"
            android:id="@+id/rl_cache">

            <TextView
                style="@style/settingOptionTitle"
                android:text="@string/setting_option3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/barText"
                android:id="@+id/tv_cache"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/settingOption"
            android:background="@drawable/base_btn_bg"
            android:clickable="true"
            android:id="@+id/rl_about">

            <TextView
                style="@style/settingOptionTitle"
                android:text="@string/about_title"/>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="20dp"
            android:background="@drawable/base_btn_bg"
            android:text="@string/setting_exit_account"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone"
            android:id="@+id/btn_exit"/>

        <LinearLayout
            style="@style/max"
            android:background="@color/defaultBG">

        </LinearLayout>

    </LinearLayout>
</layout>
