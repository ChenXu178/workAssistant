<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/max">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">

        <RelativeLayout
            style="@style/deleteDialogItem"
            android:id="@+id/rl_delete_confirm">

            <TextView
                style="@style/deleteDialogItem.Text"
                android:textColor="@color/red"
                tools:text="删除1个文件"
                android:id="@+id/tv_delete_number"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@color/fileDivider"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            style="@style/deleteDialogItem"
            android:id="@+id/rl_delete_cancel">

            <TextView
                style="@style/deleteDialogItem.Text"
                android:textColor="@color/mainBlue"
                android:text="@string/file_menage_delete_cancel"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>